<div class="message">
    <% if !message.poster.blank? %>
        <div class="messageHeader"><p><strong><%= message.poster %> </strong>
            <span class="timeStamp"><%=message.created_at.strftime("%I:%M %p")%></span></p>
        </div>
        <div class="messageContent"><%=message.content%></div>
    <% else %>
        <div class="messageHeader"><p><strong>Gerbil </strong>
            <span class="timeStamp"><%=message.created_at.strftime("%I:%M %p")%></span></p>
        </div>
        <div class="messageContent"><%=message.content%></div>
    <% end %>
</div>
