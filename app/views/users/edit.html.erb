<% content_for :title, @user.username+"'s Profile" %>
<%= form_for(@user) do |f| %>

  <%= f.label :avatar %><br>
  <%= f.file_field :avatar %>
  <% if @user.avatar? %>
    <%= image_tag @user.avatar.thumb.url %>
    <%= f.label :remove_avatar %>
    <%= f.check_box :remove_avatar %>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<%end%>


<%= link_to 'Back', users_path %>
</div>
