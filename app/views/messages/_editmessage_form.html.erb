<span onclick=closeEditForm() style="float:right; margin: 5px 15px 0 0; font-size:20px; cursor:pointer">&times;</span>
<h3>Editing Message</h3>
<center><p id="editErrorNotice" class="errorNotice"><%= notice %></p></center>
<div id="editMathTyping" class="mathTyping"></div>
    <%= render partial: 'messages/mathMenu'%>
    <%=form_for @message, remote: true, :url => {:controller=> "messages", :action => "update"}, :method => "put", authenticity_token: true do |f|%>
      <%= f.text_area :content,  class: "form-control", rows: "1", :placeholder => "Edit Message, to use math formatting surround formula with $ signs", data: {textarea: "message"}, id: 'editmessage_content'%>
      <%= f.hidden_field :chatroom_id, value: @message.chatroom_id %>
      <% if !current_user.nil? %>
        <%= f.hidden_field :poster, value: current_user.username %>
        <%= f.hidden_field :user_id, value: current_user.id %>
      <% end %>
      <%= f.submit "edit", class: "submitButton", style:"margin-left: 10px", data: {send: "message"}, id: 'editmessage_submit'%>
    <%end%>
