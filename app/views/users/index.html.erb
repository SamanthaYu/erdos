<h1>Users</h1>


<div id="userDiv">
  <table>
    <thead>
      <tr>
        <th>Username&nbsp;</th>
        <th>&nbsp;Destroy</th>
      </tr>
    </thead>

    <tbody>
      <% @users.order("username").each do |user| %>
        <tr>
          <td><%= link_to user.username, user %></td>
          <% if !current_user.nil? && current_user.userType == 'Admin' %>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
        </tr>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

