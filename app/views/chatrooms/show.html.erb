<% if !@chatroom.roomname.blank? %>
    <% content_for :title, @chatroom.roomname %>
<% else %>
    <% content_for :title, chatroom_path(@chatroom) %>
<% end %>

<div id="deleteForm" class="forms" style="display:none"></div>
<div id="editForm" class="forms" style="display:none"></div>
<div id="imgUploadForm" class="forms" style="display:none"></div>

<div id="header">
    <% if !@chatroom.roomname.blank? %>
        <h1><%= @chatroom.roomname %> - Owner: <%= @chatroom.owner.username %></h1>
    <% else %>
        <h1><%= chatroom_path(@chatroom) %> - Owner: <%= @chatroom.owner.username %></h1>
    <% end %>
</div>


<div id="messageContainer">
    <div id="messages">
        <%= render partial: 'messages/message', collection: @chatroom.messages.order(:id)%>
    </div>
</div>

<%= render partial: 'messages/message_form', locals: {message: @message, chatroom: @chatroom}%>
