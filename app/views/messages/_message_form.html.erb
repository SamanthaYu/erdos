<div id="inputForm">
    <div id="mathTyping"></div>
    <%= render partial: 'messages/mathMenu'%>
    <%=form_for message, remote: true, authenticity_token: true do |f|%>
      <%= f.text_area :content, class: "form-control", rows: "1", :placeholder => "Enter Message, to use math formatting surround formula with $ signs", data: {textarea: "message"}%>
      <%= f.hidden_field :chatroom_id, value: chatroom.id %>
      <% if !current_user.nil? %>
        <%= f.hidden_field :poster, value: current_user.username %>
        <%= f.hidden_field :user_id, value: current_user.id %>
      <% end %>
      <%= f.submit "send", class: "btn", style: "display: none", data: {send: "message"}%>
    <%end%>
</div>
