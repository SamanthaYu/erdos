<div id="inputForm">

    <%=form_for message, remote: true, authenticity_token: true do |f|%>
      <% if !current_user.nil? %>
        <%= f.text_area :poster, value: current_user.username, data: {textarea: "useridfier"}%>
        <%= f.hidden_field :user_id, value: current_user.id%>
      <% end %>
      <%= f.text_area :content, class: "form-control", :placeholder => "Enter Message", data: {textarea: "message"}%>
      <%= f.hidden_field :chatroom_id, value: chatroom.id %>
      <%= f.submit "send", class: "btn", style: "display: none", data: {send: ["message", "useridfier"]}%>
    <%end%>
</div>
